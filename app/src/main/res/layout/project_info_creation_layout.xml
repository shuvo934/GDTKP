                android:layout_height="wrap_content"
                android:background="@color/primaryVariant_waterfall">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pc_proj_no"
                    android:layout_margin="1dp"
                    app:boxStrokeColor="@color/primaryVariant_waterfall"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#b2bec3"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    android:textColorHint = "#b2bec3"
                    app:helperTextEnabled="true"
                    app:boxBackgroundMode="filled"
                    app:helperText=""
                    app:helperTextTextColor="@android:color/holo_red_dark"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/project_no_project_creation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight=".5"
            android:layout_marginStart="2.5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryVariant_waterfall">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pc_proj_appr_date"
                    android:layout_margin="1dp"
                    app:boxStrokeColor="@color/primaryVariant_waterfall"
                    app:boxStrokeWidth="0dp"
                    app:boxBackgroundColor="@color/white"
                    app:hintTextColor="#b2bec3"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    android:textColorHint = "#b2bec3"
                    app:helperTextEnabled="true"
                    app:boxBackgroundMode="filled"
                    app:helperText=""
                    android:clickable="true"
                    android:focusable="false"
                    app:helperTextTextColor="@android:color/holo_red_dark"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
