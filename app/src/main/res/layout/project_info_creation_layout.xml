            android:layout_marginTop="5dp"
            android:layout_marginEnd="2.5dp"
            android:layout_weight=".5"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
