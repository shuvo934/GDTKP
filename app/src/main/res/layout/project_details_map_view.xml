<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/background_of_p_d_m"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/project_count_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project"
        android:textColor="@color/primary_reef"
        android:fontFamily="@font/roboto_medium"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/project_name_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project"
        android:textColor="@color/primaryVariant_waterfall"
        android:fontFamily="@font/roboto_medium"
        android:padding="5dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/internal_no_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="s23223"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="11sp"/>
    <Button
        android:id="@+id/go_to_details_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="end"
        android:text="Details"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_margin="5dp" />


</LinearLayout>