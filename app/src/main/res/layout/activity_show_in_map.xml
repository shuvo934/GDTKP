<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".projectUpdate.editProject.showMap.ShowInMap">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map_from_project_edit"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                />
            <Spinner
                android:id="@+id/spinnnnn_multi3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quit_button_design"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/dummy_layout_2"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp" />
            <LinearLayout
                android:id="@+id/dummy_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="5dp"
                android:orientation="vertical"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>