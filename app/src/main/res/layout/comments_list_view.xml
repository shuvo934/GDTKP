<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="3dp"
        app:cardBackgroundColor="@color/back_color">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_account"/>
            <TextView
                android:id="@+id/name_of_commentor_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="3dp"
                android:text="Ahasan Ul Haque Shuvo"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/comments_of_commentor_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:layout_marginTop="2dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="3dp"
            android:layout_gravity="center"
            android:text="Internal No/ ক্রমিক নং:"
            android:textSize="13sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/time_of_commentor_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="3dp"
            android:gravity="end"
            android:layout_gravity="center"
            android:text="22-May-21"
            android:textSize="12sp"
            android:textStyle="bold"
            />

    </LinearLayout>

</LinearLayout>